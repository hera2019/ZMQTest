{
  "manifest_version": 2,
  "name": "ZMQ測試插件",
  "version": "1.0",
  "description": "这是一个简单的Chrome插件示例。",
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "popup_window": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L"
      },
      "description": "打开弹出窗口"
    }
  }
}